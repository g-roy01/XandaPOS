                        </div>

                    </div>
                </div>
            </div>
        </div>


    </div>

</div>

@*ADD CUSTOMER MASTER PANEL*@
<div id="kt_notes_panel" class="offcanvas offcanvas-right kt-color-panel p-5">
    <div class="offcanvas-header d-flex align-items-center justify-content-between pb-3">
        <h4 class="font-size-h4 font-weight-bold m-0">
            Add Employee
        </h4>
        <a href="#" class="btn btn-sm btn-icon btn-light btn-hover-primary" id="kt_notes_panel_close">
            <svg width="20px" height="20px" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"></path>
            </svg>
        </a>
    </div>
    <form id="myform">
        <div class="row">

            <div class="col-12">
                <div class="form-group">
                    <label class="text-dark">Employee Name</label>
                    <input type="text" name="EmpName" class="form-control" id="EmpNameAdd">
                    <small class="form-text text-muted">Please Enter Employee Name</small>
                </div>

                <div class="form-group">
                    <label class="text-dark">Employee Address</label>
                    <input type="text" name="EmpAddress" class="form-control" id="EmpAddressAdd">
                    <small class="form-text text-muted">Please Enter Address</small>
                </div>
                <div class="form-group">
                    <label class="text-dark">Employee Pin</label>
                    <input type="text" name="EmpPinCode" class="form-control" id="EmpPinAdd">
                    <small class="form-text text-muted">Please Enter Pincode</small>
                </div>
                <div class="form-group">
                    <label class="text-dark">Employee Phone</label>
                    <input type="text" name="EmpPhnData" class="form-control" id="EmpPhnDataAdd">
                    <small class="form-text text-muted">Please Enter Phone Number</small>
                </div>
                <div class="form-group">
                    <label class="text-dark">Employee Email</label>
                    <input type="email" name="EmpPhnData" class="form-control" id="EmpEmailDataAdd">
                    <small class="form-text text-muted">Please Enter Email</small>
                </div>
                <div class="form-group">
                    <label class="text-dark">Employee Govt. ID Type</label>
                    <input type="text" name="EmpGovtIdType" class="form-control" id="EmpGovtIdTypeAdd">
                    <small class="form-text text-muted">Please Enter Email</small>
                </div>
                <div class="form-group">
                    <label class="text-dark">Employee Govt. ID No.</label>
                    <input type="text" name="EmpGovtIdNo" class="form-control" id="EmpGovtIdNoAdd">
                    <small class="form-text text-muted">Please Enter Email</small>
                </div>
                <div class="form-group">
                    <label class="text-dark">Employee Join Date</label>
                    <input type="date" name="EmpJoinDate" class="form-control" id="EmpJoinDateAdd">
                </div>
                <div class="form-group">
                    <label class="text-dark">Employee Resign Date</label>
                    <input type="date" name="EmpJoinDate" class="form-control" id="EmpResignDateAdd">
                </div>
            </div>
        </div>

        <button type="button" id="AddBtnEmployee" class="btn btn-primary">Add Employee</button>
    </form>
</div>

